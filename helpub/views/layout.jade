  body
    .app.app-default
      aside#sidebar.app-sidebar
        .sidebar-header
          a.sidebar-brand(target="_blank" href='http://www.mt.gov.br/')
           img(style="margin-top:40px;",width="100",height="100",src='/static/images/logo-gov-mt.fw.png')
          button.sidebar-toggle(type='button')
            i.fa.fa-times
        .sidebar-menu(style="height:100%;")
          ul#menu-app.sidebar-nav
            li
              a(data-menu-url='principal' href='/principal')
                .icon
                  i.fa.fa-tasks(aria-hidden='true')
                .title Principal
            li
              a(data-menu-url='chamado' href='/chamado')
                .icon
                  i.fa.fa-bullhorn(aria-hidden='true')
                .title Chamados

      .app-container
        nav#navbar.navbar.navbar-default
          .container-fluid
            .navbar-collapse.collapse.in
              ul.nav.navbar-nav.navbar-mobile
                //li
                  button.sidebar-toggle(type='button')
                    i.fa.fa-bars
                //li.logo
                  a.navbar-brand(href='#')
                    span.highlight Helpub
                //li
                  button.navbar-toggle(type='button')
                    img.profile-img(src='/static/images/profile.png')
              ul.nav.navbar-nav.navbar-right
                  li.dropdown.profile
                    a.dropdown-toggle(href='/perfil', data-toggle='dropdown')
                      img.profile-img(src='http://icon-icons.com/icons2/35/PNG/512/police_avatar_person_2845.png')
                      .title Perfil
                    .dropdown-menu
                      .profile-info
                        h4.username Chuck Norris
                      ul.action
                        //li
                          a(href='/perfil')
                            i.fa.fa-user
                            |  Perfil
                        li
                          a(href='/login')
                            i.fa.fa-sign-out
                            |  Sair

        .row
          .col-md-12
            block content

        footer.app-footer
          .row
            .col-xs-12
              .footer-copyright
                | Todos os direitos reservados Â© 2016 Helpub
